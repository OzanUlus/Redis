@model List<string>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<form method="post" asp-action="Add" enctype="application/x-www-form-urlencoded">
    <input name="name" placeholder="İsmizi yazınız" type="text" />
    <button type="submit" class="btn btn-outline-warning">Kaydet</button>
</form>

@foreach (var item in Model)
{
    <h3>@item <a asp-controller="ListType" asp-action="Remove" asp-route-name="@item" class="btn btn-outline-danger">Sil</a></h3>
}